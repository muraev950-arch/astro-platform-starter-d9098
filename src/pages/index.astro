---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Александр Литвин — Private Office">
  <section class="hero">
    <img
      src="/images/alexandr-litvin.jpg"
      alt="Александр Литвин"
      class="hero-photo"
    />

    <h1>Александр Литвин</h1>
    <p class="subtitle">
      Экстрасенс и парапсихолог, победитель проекта «Битва экстрасенсов».
      Закрытый формат индивидуальной аналитической работы — Private Office.
    </p>

    <div class="actions">
      <a href="/biography" class="btn secondary">Биография</a>
      <a href="#form" class="btn primary">Оставить заявку</a>
    </div>
  </section>

  <section id="form" class="form-section">
    <h2>Оставить заявку</h2>

    <form
      name="request"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
    >
      <input type="hidden" name="form-name" value="request" />

      <input type="text" name="name" placeholder="Ваше имя" required />
      <input type="email" name="email" placeholder="Email" required />
      <input type="tel" name="phone" placeholder="Телефон" required />

      <button type="submit">Отправить</button>
    </form>
  </section>
</Layout>

<style>
.hero {
  min-height: 90vh;
  text-align: center;
  padding: 80px 20px;
}
.hero-photo {
  width: 220px;
  border-radius: 50%;
  margin-bottom: 30px;
}
.subtitle {
  max-width: 700px;
  margin: 20px auto 40px;
  opacity: 0.9;
}
.actions {
  display: flex;
  justify-content: center;
  gap: 20px;
}
.btn {
  padding: 14px 28px;
  border-radius: 10px;
  text-decoration: none;
  font-weight: 600;
}
.primary {
  background: #6366f1;
  color: #fff;
}
.secondary {
  background: #1f2937;
  color: #fff;
}
.form-section {
  padding: 80px 20px;
  text-align: center;
}
form {
  max-width: 420px;
  margin: 0 auto;
  display: grid;
  gap: 15px;
}
input {
  padding: 14px;
  border-radius: 8px;
  border: none;
}
button {
  padding: 14px;
  border-radius: 8px;
  border: none;
  background: #6366f1;
  color: #fff;
  font-weight: 600;
}
</style>
